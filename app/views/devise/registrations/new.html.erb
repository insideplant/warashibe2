<div class="sign-up">
  <div class="container">
    <div class="content left-content">
      <%= image_tag 'warashibe.png', width: '240px', height: '225.9px' %>
    </div>

    <div class="content right-content">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.text_field :name, :placeholder => "Enter your name...", autofocus: true %>
        </div>

        <div class="field">
          <%= f.email_field :email, :placeholder => "Enter your email...", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.password_field :password, :placeholder => "Create a password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, :placeholder => "Password comfirmation", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>

      <a class="modalopen"><span>Log in</span></a>
    </div>
  </div>
</div>

 <%= render "public/homes/login_modal" %>

<%= javascript_include_tag "login.js" %>

