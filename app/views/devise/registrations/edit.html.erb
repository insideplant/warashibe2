<div class="user-edit">
  <div class="container">
    <div class="content edit-content">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, :placeholder => "Enter your name...", autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, :placeholder => "Enter your email...", autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password %>
          <small><i>(leave blank if you don't want to change it)</i></small><br />
          <%= f.password_field :password, :placeholder => "Create a password", autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <small><em><%= @minimum_password_length %> characters minimum</em></small>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, :placeholder => "Password comfirmation", autocomplete: "new-password" %>
        </div>


        <div class="field">
          <%= f.label :current_password %>
          <small><i>(we need your current password to confirm your changes)</i></small><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Update" %>
        </div>
      <% end %>
      
      <div class="cancel">
        <h3>Cancel my account</h3>
        <p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
      </div>
      
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>